                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#BB000000" Offset="0.061"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

        </Grid>
        
